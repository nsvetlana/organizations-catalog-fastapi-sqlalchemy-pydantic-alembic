# PostgreSQL configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=yourpassword
POSTGRES_DB=mydb
DATABASE_URL=postgresql://postgres:yourpassword@db:5432/mydb

# JWT configuration using Ed25519 (EdDSA)
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
... (your Ed25519 private key here) ...
-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
... (your Ed25519 public key here) ...
-----END PUBLIC KEY-----"
JWT_ALGORITHM=EdDSA
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API key for OAuth2 token exchange; the client must provide this as client_secret
API_KEY=supersecretapikey
